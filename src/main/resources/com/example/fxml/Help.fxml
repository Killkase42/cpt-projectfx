<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="427.0" prefWidth="649.0" styleClass="background-help-general" stylesheets="@/com/example/css/styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.HelpController">
   <children>
      <Label layoutX="265.0" layoutY="12.0" styleClass="text-help-general-title" stylesheets="@/com/example/css/styles.css" text="General Features Help" underline="true" />
      <Label layoutX="10.0" layoutY="50.0" styleClass="text-help-general-heading1" stylesheets="@/com/example/css/styles.css" text="Adding Assignments" />
      <Label layoutX="150.0" layoutY="50.0" prefWidth="480.0" styleClass="text-help-general-body1" stylesheets="@/com/example/css/styles.css" text="Select the &quot;Add Assignment&quot; button and fill in the requested information. Once added, an assignment is able to be seen on the calender and will have a difficulty score depending on its specified details." wrapText="true" />
      <Label layoutX="10.0" layoutY="230.0" styleClass="text-help-general-heading2" stylesheets="@/com/example/css/styles.css" text="Updating Assignments" />
      <Label layoutX="150.0" layoutY="230.0" prefWidth="480.0" styleClass="text-help-general-body2" stylesheets="@/com/example/css/styles.css" text="Before and after manipulating assignments, it is useful to press the &quot;Update Assignments&quot; button. This will update the calender so all up-to-date assignments can be seen, as well as all tool tips" wrapText="true" />
