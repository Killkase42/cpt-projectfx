      <Button layoutX="209.0" layoutY="388.0" mnemonicParsing="false" onAction="#goToScoreHelp" styleClass="button-general-help" stylesheets="@/com/example/css/styles.css" text="Help with Score, Date Score, and Ratings" underline="true" />
      <Label layoutX="10.0" layoutY="333.0" styleClass="text-help-general-heading5" stylesheets="@/com/example/css/styles.css" text="Closing Pop-up Menus" wrapText="true" />
